{
  "name": "eufony/inflector-utils",
  "description": "Essentials for getting started with inflection.",
  "keywords": [ "eufony", "inflector", "inflection" ],
  "type": "library",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Alpin Gencer",
      "email": "alpingencer@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.0",
    "eufony/inflector": "^1.0"
  },
  "require-dev": {
    "eufony/inflector-tests": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "provide": {
    "eufony/inflector-implementation": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Eufony\\Inflector\\Utils\\": [ "src/" ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eufony\\Inflector\\Utils\\Tests\\": [ "tests/" ]
    }
  },
  "scripts": {
    "test": [
      "phpunit -c tests/phpunit.xml.dist"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
